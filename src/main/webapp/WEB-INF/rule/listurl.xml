<?xml version="1.0" encoding="UTF-8"?>
<config charset="UTF-8" >

<!--     <var-def name="pageUrl" >
http://www.dipingqi.net.cn/hydb
    </var-def> -->
    <var-def name="products" >
        <try>
            <body>
                <xpath expression="//tr/td[@class=&apos;news_bottom_line&apos;]/a" >
                    <html-to-xml outputtype="pretty" >
                        <http
                            charset="gbk"
                            cookie-policy="browser"
                            url="${pageUrl}" >
                        </http>
                    </html-to-xml>
                </xpath>
            </body>
            <catch>
            </catch>
        </try>
    </var-def>
    <var-def name="listUrl" >
        <template>
			<![CDATA[<li>]]>
			<![CDATA[${products}]]>
			<![CDATA[</li>]]>
			</template>
    </var-def>
    <var-def name="xmlcontent" >
		<![CDATA[<?xml version="1.0" encoding="UTF-8"?>]]>
		<![CDATA[<list>]]>
		<try>
            <body>
                <loop
                    index="i"
                    item="item" >
                    <list>
                        <xpath expression="//a" >
                            <var name="listUrl" />
                        </xpath>
                    </list>
                    <body>
                        <xquery>
                            <xq-param
                                name="item"
                                type="node()" >
                                <var name="item" />
                            </xq-param>
                            <xq-expression>
							<![CDATA[
								declare variable $item as node() external;
	                            let $detailUrl := data($item/a/@href)

	                            return
	                            <item>
	                                 <url>http://www.dipingqi.net.cn{$detailUrl}</url>
	                            </item>
	                        ]]>
                            </xq-expression>
                        </xquery>
                    </body>
                </loop>
            </body>
            <catch>
            </catch>
        </try>
		<![CDATA[ </list>]]>
	</var-def>

